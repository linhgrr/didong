<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Màn hình hiển thị -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textSize="48sp"
        android:padding="16dp"
        android:background="#E6E6E6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.28" />

    <!-- Flow helper sắp xếp phím 4 cột x 5 hàng -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/keypadFlow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_wrapMode="aligned"
        app:flow_maxElementsWrap="4"
        app:flow_verticalGap="8dp"
        app:flow_horizontalGap="8dp"
        app:constraint_referenced_ids="btnCE,btnC,btnBS,btnDiv,btn7,btn8,btn9,btnMul,btn4,btn5,btn6,btnSub,btn1,btn2,btn3,btnAdd,btnPlusMinus,btn0,btnDot,btnEq" />

    <!-- Hàng 1 -->
    <Button
        android:id="@+id/btnCE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="CE" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="C" />

    <Button
        android:id="@+id/btnBS"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="BS" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="/" />

    <!-- Hàng 2 -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="9" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="x" />

    <!-- Hàng 3 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="6" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="-" />

    <!-- Hàng 4 -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="3" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="+" />

    <!-- Hàng 5 -->
    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="+/-" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="0" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="." />

    <Button
        android:id="@+id/btnEq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="=" />

</androidx.constraintlayout.widget.ConstraintLayout>